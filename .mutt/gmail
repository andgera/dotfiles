## ~/.mutt/muttrc
set imap_check_subscribed
unset imap_passive
set imap_keepalive = 900
set mail_check     = 1800

set from = $my_gmail_user
set realname = $my_name
set spoolfile = imaps://imap.gmail.com:993/INBOX
set smtp_url = 'smtp://'$my_gmail_user'@smtp.gmail.com:587/'
set smtp_pass = $my_gmail_pass

set folder = "imaps://imap.gmail.com:993"
set record = "+[Gmail]/Отправленные"
set postponed = "+[Gmail]/Черновики"
set trash = "+[Gmail]/Корзина"
set header_cache = "~/.mutt/cache/gmail/headers"
set message_cachedir = "~/.mutt/cache/gmail/bodies"
set certificate_file = "~/.mutt/cert/certificates"
set mime_forward
set hostname = gmail.com

# Gmail style keybindings
 bind  editor <space> noop
 bind index,pager g noop
 macro index,pager gy "<save-message>=[Gmail]/Вся почта<enter><enter>" "Переместить в 'Вся почта'"
 macro index,pager + "<save-message>=[Gmail]/Важное<enter><enter>" "Пометить как Важное"
 macro index,pager ! "<save-message>=[Gmail]/Спам<enter><enter>" "Пометить как Спам"
 macro index,pager U <set-flag>O "Mark as read"
 macro index,pager I <clear-flag>O "Mark as unread"
 macro index,pager T <set-flag>!  "Mark as read"
 macro index,pager E <clear-flag>! "Mark as unread"
 macro index,pager ga "<change-folder>=[Gmail]/Вся почта<enter>" "Перейти в папку 'Вся почта'"
 macro index,pager gm "<change-folder>=[Gmail]/Помеченные<enter>" "Перейти в 'Помеченые'"
 macro index,pager gd "<change-folder>=[Gmail]/Черновики<enter>" "Перейти в 'Черновики'"
 macro index,pager gs "<change-folder>=[Gmail]/Спам<enter>" "Перейти в 'Спам'"
 macro index,pager gk "<change-folder>=[Gmail]/Корзина<enter>" "Перейти в 'Корзина'"
 macro index,pager gl <change-folder>? "Перейти в 'Label'"
 macro index,pager gi "<change-folder>=INBOX<enter>" "Перейти в inbox"
 macro index,pager gt "<change-folder>=[Gmail]/Отправленные<enter>" "Перейти в 'Отправленные'"
 folder-hook +INBOX 'macro index,pager gc "<save-message>=[Gmail]/Вся почта<enter><enter>"  "Archive conversation"'
 folder-hook +[Gmail]/Корзина macro index,pager gc "<save-message>=INBOX<enter><enter>" "Move to inbox"
 folder-hook +[Gmail]/Помеченые bind  index,pager gc flag-message #"Toggle star"


# PGP
set pgp_sign_as = 0x71955D0A

send-hook . 'set from = $my_gmail_user'
my_hdr X-PGP-Key: https://keyserver.ubuntu.com/pks/lookup?op=vindex&search=andgera%40gmail.com


# vim: ft=muttrc
